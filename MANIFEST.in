# Include README and documentation
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include requirements.txt

# Include Python files
include *.py

# Include any screenshots or assets
recursive-include screenshots *
recursive-include assets *

# Exclude common unwanted files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.log 